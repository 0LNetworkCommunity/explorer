{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Explorer API - Debug",
      "type": "node-terminal",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "command": "npm run start:dev",
      "cwd": "${workspaceFolder}/api",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/api/**",
        "!**/node_modules/**"
      ],
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
    },
    {
      "name": "Explorer API - Attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/api/**",
        "!**/node_modules/**"
      ],
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
      "restart": true
    }
  ]
}
